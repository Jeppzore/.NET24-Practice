<Window x:Class="_4._Tre_centrerade_knappar_åt_andra_hållet_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._Tre_centrerade_knappar_åt_andra_hållet_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel
            Width="135"
            Height="30" 
            Orientation="Horizontal" 
            Grid.Row="1" 
            Grid.Column="1"
            >

            <Button
                x:Name="playButton"
                Content="Play"
                Margin="5" 
                FontWeight="Bold">
            </Button>

            <Button
                x:Name="optionsButton"
                Content="Options"
                Margin="5" 
                FontWeight="Bold">
            </Button>

            <Button
                x:Name="quitButton"
                Content="Quit"
                Margin="5" 
                FontWeight="Bold">
            </Button>

        </StackPanel>
        
        
    </Grid>
</Window>
