<Window x:Class="_4._Label_med_valbar_position.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._Label_med_valbar_position"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="100">
        <StackPanel HorizontalAlignment="Center" Height="200" Width="200">
        
            <Label x:Name="myLabelPosition" Content="x = 0 , y = 0 " Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Label Content="x position:"/>
            <Slider x:Name="sliderX"
                    Minimum="0"
                    Maximum="100"
                    ValueChanged="sliderX_ValueChanged"/>

            <Label Content="y position:"/>
            <Slider x:Name="sliderY"
        Minimum="0"
        Maximum="100"
        ValueChanged="sliderY_ValueChanged"/>

        </StackPanel>

    </Grid>
</Window>
