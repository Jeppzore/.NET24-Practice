<Window x:Class="_3._Lägg_till_Slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._Lägg_till_Slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel Margin="50" Orientation="Vertical">
            <Label x:Name="myLabel" Content="5" Margin=" 20,0,0,0" FontSize="20"/>

            <Button x:Name="buttonIncrease" Content="Increase" Margin="5" Click="buttonIncrease_Click"/>
            <Button x:Name="buttonDecrease" Content="Decrease" Click="buttonDecrease_Click"/>
            
            <Slider Name="mySlider" Margin="10" Visibility="Visible" Width="60"
                    Minimum="0"
                    Maximum="9"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    ValueChanged="mySlider_ValueChanged"/>

        </StackPanel>

    </Grid>
</Window>
