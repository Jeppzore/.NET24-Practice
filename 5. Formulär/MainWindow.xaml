<Window x:Class="_5._Formulär.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5._Formulär"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            
        <Label x:Name="myLabelFirst"
               Content="Firstname:"
               Margin="10,10,0,0"/>

            <TextBox x:Name="textboxFirst"
                     HorizontalAlignment="Left"
                     MinWidth="70"
                     Margin="15,10,0,0"/>

            <Label x:Name="myLabelLast"
               Content="Lastname:"
               Margin="10,10,0,0"/>

            <TextBox x:Name="textboxLast"
                     HorizontalAlignment="Left"
                     MinWidth="70"
                     Margin="15,10,0,0"/>

        </StackPanel>

    </Grid>
</Window>
