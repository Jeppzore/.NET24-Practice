<Window x:Class="_3._Tre_centrerade_knappar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._Tre_centrerade_knappar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel
            Width="50"
            Height="100"
            >

            <Button
                x:Name="playButton"
                Content="Play"
                Width="50"
                Margin="0,5,0,10" 
                FontWeight="Bold">
            </Button>

            <Button
            x:Name="optionsButton"
            Content="Options"
            Width="50"
            Margin="0,5,0,10" 
            FontWeight="Bold">
            </Button>

            <Button
            x:Name="quitButton"
            Content="Quit"
            Width="50"
            Margin="0,5,0,10" 
            FontWeight="Bold">
            </Button>

        </StackPanel>

    </Grid>
</Window>
